<?xml version="1.0"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">
<!--
        Created by Manifold
--><service_bundle type="manifest" name="zone_man">

    <service name="application/zone_man" type="service" version="5">

        <create_default_instance enabled="false"/>

        <single_instance/>

        <dependency name="network" grouping="require_all" restart_on="error" type="service">
            <service_fmri value="svc:/milestone/network:default"/>
        </dependency>

        <dependency name="filesystem" grouping="require_all" restart_on="error" type="service">
            <service_fmri value="svc:/system/filesystem/local"/>
        </dependency>

        <method_context>
            <method_environment>
                <envvar name="HOME" value="/opt/zone_man"/>
            </method_environment>
        </method_context>

        <exec_method type="method" name="start" exec="/opt/zone_man/bin/zone_man_release start" timeout_seconds="60"/>
        <exec_method type="method" name="stop" exec="/opt/zone_man/bin/zone_man_release stop" timeout_seconds="60"/>

        <property_group name="startd" type="framework">
            <propval name="duration" type="astring" value="contract"/>
            <propval name="ignore_error" type="astring" value="core,signal"/>
        </property_group>

        <property_group name="application" type="application">
        </property_group>

        <stability value="Evolving"/>

        <template>
            <common_name>
                <loctext xml:lang="C">
                    'Zone Manager API'
                </loctext>
            </common_name>
        </template>

    </service>

</service_bundle>
